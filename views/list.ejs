<%- include("header") -%>

    <div id="heading" class="box">
        <h1>
            <%= list %>
        </h1>
    </div>

    <div class="box">
        <% for(let i=0; i < taskList.length; i++) {%>

            <div class="item">
                <input type="checkbox" name="" id="">
                <p>
                    <%= taskList[i] %>
                </p>
            </div>
            <% } %>

                <form class="item" action="/" method="post">
                    <input type="text" autocomplete="off" name="newTask" autofocus placeholder="new Task">
                    <button type="submit" name="list" value=<%=list%> >+</button>
                </form>
    </div>

    <%- include("footer") -%>